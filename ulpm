. ./user.sh 

function ulpm_help {
	echo "Usage"
	echo "$0 list				Lists repository"
	echo "$0 install pack-name [force]	Installs pack-name"
	echo "$0 uninstall pack-name		Uninstall pack-name"
}

function ulpm_list {
	for i in repo/*; do
		. $i
		echo -n $(echo -n $i | cut -d/ -f2)
		ulpm_pack_installed
		if [ $? -eq 0 ]; then
			echo " (installed)"
		else
			echo
		fi
	done
}

ulpm_actual_pack_stack=()
ulpm_actual_pack_stack_top=0
function ulpm_actual_pack_stack_push {
	ulpm_actual_pack_stack[$ulpm_actual_pack_stack_top]=$ulpm_actual_pack
	ulpm_actual_pack_stack_top=$((ulpm_actual_pack_stack_top+1))
}
function ulpm_actual_pack_stack_pop {
	ulpm_actual_pack_stack_top=$((ulpm_actual_pack_stack_top-1))
	ulpm_actual_pack=${ulpm_actual_pack_stack[$ulpm_actual_pack_stack_top]}
	. repo/$ulpm_actual_pack
}

function ulpm_list_prefix {
	pushd $ulpm_prefix >/dev/null
	file_list=(".")
	file_pointer=0
	file_len=1
	while [ $file_pointer -lt $file_len ]; do
		pushd ${file_list[$file_pointer]} >/dev/null
		for i in *; do
			echo ${file_list[$file_pointer]}/$i | grep -v "^\./cache"
			if [ -d ${file_list[$file_pointer]}/$i ]; then
				file_list[$file_len]=${file_list[$file_pointer]}/$i
				file_len=$(($file_len+1))
			fi
		done
		popd >/dev/null
		file_pointer=$(($file_pointer+1))
	done
	popd >/dev/null
}

function ulpm_install {
	if [ ! -e repo/$1 ]; then
		echo $1 not found
		exit 1
	fi
	. repo/$1
	ulpm_actual_pack=$1
	ulpm_pack_installed

	if [ $? -eq 0 ]; then
		if [ $# -eq 1 ]; then
			echo $1 already installed
		fi
		if [ $# -gt 1 ]; then
			if [ "$2" = "force" ]; then
				echo $1 already installed, reinstalling
			else
				return
			fi
		else
			return;
		fi
	fi

	for i in ${ulpm_pack_dependency[@]}; do
		ulpm_actual_pack_stack_push
		ulpm_install $i " as dep of $1"
		ulpm_actual_pack_stack_pop
	done
	echo Installing $1 $2
	ulpm_list_prefix > $ulpm_installed/${ulpm_actual_pack}.pre

	pushd $ulpm_cache
	rm -fr $ulpm_actual_pack 2>/dev/null >/dev/null
	ulpm_pack_fetch
	pushd $ulpm_cache/$ulpm_actual_pack
	ulpm_pack_install
	if [ $? -gt 0 ]; then
		echo Error on compiling $ulpm_actual_pack
		exit 1
	fi
	popd >/dev/null
	rm -fr $ulpm_cache/$ulpm_actual_pack
	popd >/dev/null

	ulpm_list_prefix > $ulpm_installed/${ulpm_actual_pack}.pos
	if [ $ulpm_has_diff -eq 0 ]; then
		diff $ulpm_installed/${ulpm_actual_pack}.{pre,pos} > $ulpm_installed/${ulpm_actual_pack}
		rm $ulpm_installed/${ulpm_actual_pack}.{pre,pos}
	fi

	echo Installed $ulpm_actual_pack
	return
}

function ulpm_uninstall {
	if [ $ulpm_has_diff -gt 0 ]; then
		echo "Please install diffutils to run uninstall procedure."
		exit 1
	fi
	if [ -e $ulpm_installed/$1.pre ]; then
		diff $ulpm_installed/${ulpm_actual_pack}.{pre,pos} > $ulpm_installed/$1
		rm $ulpm_installed/${ulpm_actual_pack}.{pre,pos}
	fi
	if [ ! -e $ulpm_installed/$1 ]; then
		echo "Cant uninstall $1 , there is no installation information. Probably wasnt installed by ulpm."
		exit 1
	fi
	pushd $ulpm_prefix
	cat $ulpm_installed/$1 | grep "^>" | cut -d" " -f2- | xargs echo rm
	popd
}

if [ $# -eq 0 ]; then
	ulpm_help
	exit 1
fi

. ./repo_funcs
. repo/diffutils
ulpm_pack_installed
ulpm_has_diff=$?

mkdir $ulpm_cache 2>/dev/null >/dev/null
mkdir $ulpm_cache/files 2>/dev/null >/dev/null
mkdir $ulpm_installed -p 2>/dev/null >/dev/null
case $1 in
	list) ulpm_list;;
	install) ulpm_install $2 $3;;
	uninstall) ulpm_uninstall $2;;
	help) ulpm_help;;
	*) ulpm_help_err;;
esac
