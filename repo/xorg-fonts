function ulpm_pack_install {
	for i in font-util-1.2.0 encodings-1.0.4 *; do
		if [ -d $i ]; then
			pushd $i
			ulpm_dotconfigure || return 1
			ulpm_make_install || return 1
			popd
		fi
	done
	return $?
}

function ulpm_pack_uninstall {
	ulpm_cant_install
	return $?
}

ulpm_pack_dependency=(make bzip2 mkfontscale mkfontdir bdftopcf)
